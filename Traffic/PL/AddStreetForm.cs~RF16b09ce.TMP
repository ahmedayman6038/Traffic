            Street st=new Street();
            st.streetName = metroTextBox1.Text;
            string dir = metroComboBox1.Text;
            //Horizontal = 2
            //Vertical = 1
            if (dir.Equals("Horizontal"))
            {
                st.direction = 2;
            }
            else
            {
                st.direction = 1;
            }
            db.streets.Add(st);
